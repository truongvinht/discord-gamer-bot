{
    "env": {
        "node": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "indent":[
            "error",
            4
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}