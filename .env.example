# Discord Bot Configuration
# Copy this file to .env and fill in your values

# Discord Bot Token (required)
# Get this from https://discord.com/developers/applications
BOT_TOKEN=

# Discord Application/Client ID (required for slash commands)
# Found in your Discord application's OAuth2 settings
CLIENT_ID=

# Discord Guild/Server ID (optional, for testing guild-specific commands)
# Enable Developer Mode in Discord, right-click your server, Copy ID
GUILD_ID=

# Command Prefix (default: !)
PREFIX=!

# Environment (development/production)
NODE_ENV=development

# Event Times (optional, for scheduled events)
EVENT_FRIDAY_TIME=20:00
EVENT_SUNDAY_TIME=20:00
EVENT_DURATION=2
